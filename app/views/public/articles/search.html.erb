<main>
  <div class="container">
    <div class="row">
      <h2> 投稿一覧</h2>

      タグリスト
      <% @tag_list.each do |list| %>
        <span>
          <%= link_to tag_articles_path(article_tag_id: list.id) do %>
            <%= list.tag_name %>
          <% end %>
          <%= list.articles.count %>
        </span>
      <% end %>

    </div>
  </div>
</main>