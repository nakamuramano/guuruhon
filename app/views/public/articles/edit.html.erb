<div class="container">
  <div class="row">
    <div class='col-md-3'>
      <%# サイドブロック ユーザープロフィール %>
      <%= render 'public/users/list', bookmark: @bookmarks, user: @user %>
      <%# サイドブロック タグ　%>
      <%= render 'index', tag: @tags %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <div class="inner">
        <h4 class="section-ttl">投稿を編集</h4>
        <%= form_with model: @article, url: article_path, method: :patch do |f| %>
          <div class="form-group">
            <%# タイトル %>
            <label for="book_title">タイトル</label>
            <%= f.text_field :title, class:"form-control" %>
          </div>
          <div class="form-group">
            <%# 本文 %>
            <label for="book_opinion">本文</label>
            <%= f.text_area :content, class:"form-control" %>
          </div>
          <div class="form-group">
            <%# タグ %>
            <label>タグ (『、』で区切ると複数タグ登録できます)</label>
            <%= f.text_field :tag_name,value: @tag_list,class:"form-control"%>
          </div>
          <div class="actions" style="margin:20px 0;">
            <%= f.submit "保存", class: "btn--radius" %>
          </div>
        <% end %>

        <%# 投稿詳細ページ推移 %>
  	    <%= link_to article_path( @article.id), class: "link" do %>
  	      <i class="fa-solid fa-left-long"></i>戻る
  	    <% end %>
  		</div>
  	</div>
  </div>
</div>
