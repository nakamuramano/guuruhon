<main>
  <div class="container">
    <div class="row">
      <h4>Article detail</h4>
        <%= form_with model: @article, url: admin_article_path, method: :patch do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label></br>
            <%= f.text_field :title, class:"form-control" %>
          </div>
          <div class="form-group">
            <label for="book_opinion">Opinion</label></br>
            <%= f.text_area :content, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "Update", class: "btn btn-success" %>
          </div>
        <% end %>
  		  <%= link_to "Show", admin_article_path(@article.id) %> |
  		  <%= link_to "Back", admin_articles_path %>

      <% form_with model: @tag do |f| %>
        <%= f.label"タグ (,で区切ると複数タグ登録できます)" %>
        <%= f.text_field :tag_name,value: @tag_list,class:"form-control"%>

        <div class="actions" style="margin:20px 0;">
          <%= f.submit "投稿",class:"btn btn-outline-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</main>