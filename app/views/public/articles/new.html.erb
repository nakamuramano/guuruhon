<main>
  <div class="container">
    <div class="row">
      <h3>新規投稿</h3>
      <%= form_with model: @article, url: '/articles', method: :post do |f| %>

        <h4>タイトル</h4>
        <%= f.text_field :title %>

        <h4>本文</h4>
        <%= f.text_area :content %>

        <h4>タグ</h4>


        <%= f.submit '投稿' %>

      <% end %>
    </div>
  </div>
</main>