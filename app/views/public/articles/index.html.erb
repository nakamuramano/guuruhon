<main>
  <div class="container">
    <div clsss="row">
      <table class="table table-borderless">
        <% @articles.each do |article|%>
          <tbody>
            <tr>
              <th scope="row">
                <%= link_to user_path(article.user.id) do %>
                   <%= image_tag article.user.get_profile_image(80,80) %>
                <% end %>
              </th>
              <td>
                 <%= link_to article_path(article.id) do %>
                    <%= article.title %>
                  <% end %>
              </td>
              <td><%= article.content %></td>
            </tr>
            <tr>
          </tbody>
        <% end %>
      </table>


      <% @tag_list.each do |list|%>
        <%= link_to list.tag_name,search_tag_path(tag_id: list.id) %>
        <%="(#{list.articles.count})" %>
      <% end %>

      投稿一覧画面で投稿に紐づくタグを表示
      <% @articles.each do |article| %>
       <%= article.tags.map(&:tag_name).join(",") %>
      <% end %>

    </div>
  </div>
</main>