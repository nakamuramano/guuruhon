  <div class="container">
    <div clsss="row">
      <%= form_with url: search_articles_path, local: true, method: :get do |search| %>
        <%= search.text_field :title %>
        <%= search.submit "検索" %>
      <% end %>

      <div class="icon">
        <%= link_to new_article_path do %>
          <%= image_tag  'icon_111070_256.png', size: "20x20" %>あなたのおすすめ
        <% end %>
      </div>

      <table class="table table-borderless">
        <% @articles.each do |article|%>
          <tbody>
            <tr>
              <th scope="row">
                <%= link_to user_path(article.user.id) do %>
                   <%= image_tag article.user.get_profile_image(80,80) %>
                <% end %>
                <p></p>
              </th>
              <td>
                 <%= link_to article_path(article.id) do %>
                    <%= article.title %>
                  <% end %>
              </td>
              <td><%= article.content %></td>
              <td>
                <%= link_to "#{article.comments.count} コメント", article_path(article.id) %>
              </td>
            </tr>
            <tr>
          </tbody>
        <% end %>
      </table>

      <h2>Tags --></h2>
        <ul>
          <% @tags.each do |tag| %>
            <% if tag.articles.count !=0 %>
              <li>
                <%= link_to "#{tag.tag_name} ( #{tag.articles.count} )", tag_path(tag) %>
              </li>
            <% end %>
          <% end %>
        </ul>



    </div>
  </div>
