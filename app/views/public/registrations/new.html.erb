<div class="container login">
  <div class="row">
    <section class="inner">
      <h2 class="section-ttl">新規ユーザー登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field mb2">
          <%= f.label :name,"ユーザーネーム" %><br>
          <%= f.text_field :name, :size=>"60" %>
        </div>

        <div class="field mb2">
          <%= f.label :email,"メールアドレス" %><br />
          <%= f.email_field :email, :size=>"60", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field mb2">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, :size=>"60", autocomplete: "new-password" %>
        </div>

        <div class="field mb2">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, :size=>"60", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "登録する", class: "btn--radius" %>
        </div>
      <% end %>
      <%= link_to "ログイン", new_user_session_path, class: "link" %>
    </section>
  </div>
</div>