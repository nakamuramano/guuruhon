<main>
  <div class="container">
    <div class="row">
      <h3>My information</h3>
      <%= image_tag @user.get_profile_image(80,80) %>
      <table class="table table-hover">
        <tbody>
          <tr>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td><%=link_to "いいね♡", bookmarks_path(@bookmarks) %></td>
          </tr>
        </tbody>
      </table>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>Title</th>
            <th>Content</th>
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article| %>
          <tr>
            <td>
              <%= link_to article_path(article.id) do %>
                <%= article.title %>
              <% end %>
            </td>
            <td><%= article.content %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
            <%= link_to "編集する", edit_user_path(@user.id) %>
            <%= link_to "退会する", unsubscribe_path(@user.id) %>

    </div>
  </div>
</main>