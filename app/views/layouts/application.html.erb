<!DOCTYPE html>
<html>
  <head>
    <title>Guuruhon</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
         <% if admin_signed_in? %>
    <header>
      <nav class="navbar navbar-expand-lg" >
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
             <li class="nav-item">
                <%= link_to "投稿一覧", admin_articles_path, class: "btn btn-outline-secondary" %>
              </li>
              <li class="nav-item">
                <%= link_to "会員一覧", admin_users_path, class: "btn btn-outline-secondary" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_admin_session_path, class: "btn btn-outline-secondary" %>
              </li>

            <% elsif user_signed_in? %>
                <header style="margin: 20px 20px">
      <nav class="navbar navbar-expand-lg" >
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <%= alert %>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <%= link_to "マイページ", user_path(current_user.id), class: "btn btn-outline-secondary" %>
              </li>
              <li class="nav-item">
                <%= link_to "みんなのおすすめ", articles_path, class: "btn btn-outline-secondary" %>
              </li>
              <li class="nav-item">
                <%= link_to "お気に入り♡", bookmarks_path(current_user.id), class: "btn btn-outline-secondary" %>
              </li>
              <li class="nav-item">
                 <%= link_to "ログアウト", destroy_user_session_path, class: "btn btn-outline-secondary" %>
              </li>

            <% else %>
                <header style="margin: 20px 20px">
      <nav class="navbar navbar-expand-lg" >
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">


              <li class="nav-item">

              </li>
              <li class="nav-item">
                <%= link_to "About", homes_about_path, class: "btn btn-outline-secondary" %>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録", new_user_registration_path, class: "btn btn-outline-secondary" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン",  new_user_session_path, class: "btn btn-outline-secondary" %>
              </li>
              <li class="nav-item">
                <%= link_to 'ゲストログイン（閲覧用）', guests_guest_sign_in_path, method: :post, class: "btn btn-outline-secondary" %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>

  </header>
    <%= yield %>
  </body>
</html>
