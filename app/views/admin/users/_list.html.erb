<%# アイコン %>
<%= link_to admin_user_path(@user.id) do %>
  <%= image_tag @user.get_profile_image(80,80), class: "image" %>
<% end %>
<table class="table">
  <tbody>
    <tr>
      <%# ユーザーネーム %>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <%# メールアドレス %>
      <td><%= @user.email %></td>
    </tr>
  </tbody>
</table>
<%# ユーザー編集ページ推移ボタン %>
<%= link_to "編集する", edit_admin_user_path(@user.id), class: "btn btn btn--radius" %>
<%# ユーザー退会推移ページ %>
<%= link_to "退会する", admin_unsubscribe_path(@user.id), class: "btn btn btn--radius" %>

