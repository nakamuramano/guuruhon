<div class="container">
  <div class="row">
    <div class='col-md-3'>
      <%= image_tag @user.get_profile_image(80,80), class: "image" %>
      <table class="table">
        <tbody>
          <tr>
            <td>ID: <%= @user.id %></td>
          </tr>
          <tr>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td>
              <%= link_to admin_bookmark_path(@user.id), class: "link" do %>
                お気に入り<i class="fa-solid fa-star"></i>
              <% end %>
            </td>
          </tr>
          <tr>
            <% if @user.is_active? %>
              <td class="text-success">有効</td>
            <% else %>
              <td class="text-secondary">退会</td>
            <% end %>
          </tr>
          <tr>
          </tr>
        </tbody>
      </table>
      <%= link_to "編集する", edit_admin_user_path, class: "btn btn btn--radius" %>
      <% if @user.is_active? %>
        <%= link_to "退会する", admin_unsubscribe_path(@user.id), class: "btn btn btn--radius" %>
      <% end %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <div class="inner">
        <h5 class="section-ttl">お気に入り<i class="fa-solid fa-star"></i>一覧</h5>
        <table class="table">
          <% @bookmarks.each do |bookmark| %>
            <tbody>
              <tr>
                <td>
                <%= link_to admin_article_path(bookmark.article), class: "link" do %>
                    <%= bookmark.article.title %>
                  <% end %>
                </td>
                <td><%= bookmark.article.content %></td>
              </tr>
            </tbody>
          <% end %>
        </table>
  	    <%= link_to admin_user_path(@user.id), class: "link" do %>
  	      <i class="fa-solid fa-left-long"></i>戻る
  	    <% end %>
      </div>
    </div>
  </div>
    <div class="pagination">
      <%= paginate @bookmarks %>
    </div>
