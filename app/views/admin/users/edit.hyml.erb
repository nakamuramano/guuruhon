<main>
  <div class="container">
    <div class="row">
      <h4>User info</h4>
      <%= image_tag @user.get_profile_image(80,80) %>
       <table class="table table-borderless">
        <tbody>
          <tr>
            <td width="240">User ID</td>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <td>Name</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td>Email</td>
            <td><%= @user.email%></td>
          </tr>
          <tr>
            <td>status</td>
            <% if @user.is_active? %>
              <td class="text-success">valid</td>
            <% else %>
              <td class="text-secondary">unsubscribe</td>
            <% end %>
          </tr>
          <tr>
            <td></td>
            <td><% link_to "Edit", edit_admin_user_path(@user.id) %></td>
          </tr>
        </tbody>
      </table>
      
      
      <h4>article</h4>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
             <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @articles.each do |article| %>
              <tr>
                <td>
                </td>
                <td>
                  <%= link_to article_path(article.id) do %>
                    <%= article.title %>
                  <% end %>
                </td>
                <td><%= article.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</main>