<section class="inner">
<h2 class="section-ttl">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb2">
    <%= f.label :email,"メールアドレス" %><br />
    <%= f.email_field :email, :size=>"60", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field mb2">
    <%= f.label :password %><br />
    <%= f.password_field :password, :size=>"60", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>

</section>