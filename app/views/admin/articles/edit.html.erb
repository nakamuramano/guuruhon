<div class="container article">
  <div class="row">
    <div class="inner_article">
      <h4 class="section-ttl">投稿を編集</h4>
      <%= form_with model: @article, url: admin_article_path, method: :patch do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label></br>
            <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label></br>
          <%= f.text_area :content, class:"form-control" %>
        </div>
        <%= f.label"タグ (、で区切ると複数タグ登録できます)" %>
        <%= f.text_field :tag_name,value: @tag_list,class:"form-control"%>

        <div class="actions" style="margin:20px 0;">
          <%= f.submit "保存", class: "btn--radius" %>
        </div>
      <% end %>

      <%= link_to "Show", admin_article_path(@article.id), class: "link" %> |
  	  <%= link_to "Back", admin_articles_path, class: "link" %>
    </div>
  </div>
</div>