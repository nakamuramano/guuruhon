<main>
  <div class="container">
    <div class="row">
      <h4>Article detail</h4>
        <table class='table table-hover table-inverse'>
          <tr>
            <td>
              <%= link_to admin_user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image(100,100) %></br>
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to admin_article_path(@article.id) do %>
                <%= @article.title %>
              <% end %>
            </td>
            <td><%= @article.content %></td>
              <td>
                <%= link_to 'Edit', edit_admin_article_path(@article.id), class: 'btn btn-success btn-sm' %>
              </td>
              <td>
                <%= link_to 'Destroy', admin_article_path(@article), method: :delete, class:'btn btn-danger btn-sm', "data-confirm" => "本当に削除しますか？" %>
              </td>

          </tr>
        </table>
        <div>
          <p>コメント件数：<%= @article.comments.count %></p>
          <% @article.comments.each do |comment| %>
            <p><%= image_tag comment.user.get_profile_image(80,80) %></p>
               <%= comment.user.name %>
               <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.body %>
               <%= link_to "削除", admin_article_comment_path(comment.article, comment), method: :delete %>
          <% end %>
        </div>
        <div>
          <%= form_with model: [@article, @comment] do |f| %>
            <%= f.text_area :body, rows: '5', placeholder: "コメントをここに" %>
            <%= f.submit "送信する" %>
          <% end %>
        </div>

    </div>

    </div>
  </div>
</main>