<main>
  <div class="container">
    <div class="row">
      <h1>Tags#show</h1>
      <p>Find me in app/views/tags/show.html.erb</p>

      <h2>Actions --></h2>
      <%= link_to 'Tags List', tags_path %>
      <%= link_to 'Delete', tag_path(@tag), method: :delete, data: {confirm: '関連づいた記事のタグが空になりますがタグを削除しますか？'} %>

      <h2>Tag --></h2>

      <h3><%= @tag.tag_name %></h3>

      <ul>
        <% @tag.articles.each do |article| %>
          <li>
            <%= link_to article.title, admin_article_path(article) %>
          </li>
        <% end %>
      </ul>


    </div>
  </div>
</main>

<div class="container">
  <div class="row">
    <div class="inner">
      <h4 class="section-ttl">
        タグが<%= @tag.tag_name%>の投稿一覧
        <%= link_to 'Delete', admin_tag_path(@tag), method: :delete, data: {confirm: '関連づいた記事のタグが空になりますがタグを削除しますか？'} %>
      </h4>
        <table class="table">
          <% @tag.articles.each do |article| %>
            <tbody>
              <tr>
                <th>
                  <%= link_to admin_user_path(article.user.id) do %>
                     <%= image_tag article.user.get_profile_image(80,80), class: "image" %>
                  <% end %>
                  <p></p>
                </th>
                <td><%= link_to article.title, admin_article_path(article), class: "link" %></td>
                <td>
                  <%= link_to "#{article.comments.count} コメント", admin_article_path(article.id), class: "link" %>
                </td>
              </tr>
            </tbody>
          <% end %>
        </table>

        <div><%= link_to '#タグ一覧', admin_tags_path, class: "link" %></div>
      </div>
    </div>
  </div>
</div>
